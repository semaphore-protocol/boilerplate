        "@semaphore-protocol/identity": "2.0.0",
        "@semaphore-protocol/proof": "2.3.1",
        "@typechain/ethers-v5": "^10.0.0",
        "@typechain/hardhat": "^6.0.0",
        "@types/chai": "^4.3.1",
        "@types/download": "^8.0.1",
        "@types/mocha": "^9.1.1",
        "chai": "^4.2.0",
        "circomlibjs": "0.0.8",
